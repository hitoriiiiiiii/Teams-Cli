datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  githubId  String   @unique
  username  String
  email     String?
  teams     TeamMember[]
  createdAt DateTime @default(now())
}

model Team {
  id        Int      @id @default(autoincrement())
  name      String
  members   TeamMember[]
  repos     Repo[]
  createdAt DateTime @default(now())
}

model TeamMember {
  id     Int   @id @default(autoincrement())
  userId Int
  teamId Int

  user   User @relation(fields: [userId], references: [id])
  team   Team @relation(fields: [teamId], references: [id])

  @@unique([userId, teamId])
}

model Repo {
  id        Int      @id @default(autoincrement())
  name      String
  teamId    Int
  team      Team     @relation(fields: [teamId], references: [id])
  commits   Commit[]
  createdAt DateTime @default(now())

  @@unique([teamId, name])
}

model Commit {
  id        Int      @id @default(autoincrement())
  sha       String   @unique
  message   String
  repoId    Int
  repo      Repo     @relation(fields: [repoId], references: [id])
  createdAt DateTime @default(now())
}
